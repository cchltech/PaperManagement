<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cchl.dao.UserMapper">
    <resultMap id="user" type="com.cchl.entity.User">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="status" jdbcType="TINYINT" property="status"/>
        <result column="type" jdbcType="TINYINT" property="type"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (status, type) VALUE (#{status}, #{type})
    </insert>
    <select id="totalNumber" resultType="java.lang.Integer">
        SELECT count(id) FROM user
        <if test="all">
            WHERE status = #{status}
        </if>
    </select>
    <select id="selectUnaudited" resultType="com.cchl.entity.User">
        SELECT id, status,type,create_time FROM user LIMIT #{limit},#{number}
    </select>
    <update id="updateStatus">
        UPDATE user SET status = #{status} WHERE id = #{id}
    </update>
</mapper>